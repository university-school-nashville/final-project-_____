# making turtle window
import turtle
window = turtle.getscreen()
window.title('Cat and Mouse!')
window.bgcolor('PaleGreen')

#creating variables
mouse = turtle.Turtle()
cat = turtle.Turtle()

#defiing variable characteristics
mouse.up()
mouse.fillcolor('Blue')
mouse.shape('circle')
cat.up()
cat.fillcolor('Red')
cat.shape('square')

#setting variable locations
mouse.goto(100, 0)
cat.goto(-100, 0)

#setting variable basic movement
def Up():
    mouse.setheading(90)
    mouse.forward(10)
def Down():
    mouse.setheading(270)
    mouse.forward(10)
def Left():
    mouse.setheading(180)
    mouse.forward(10)
def Right():
    mouse.setheading(0)
    mouse.forward(10)
    
def follow_runner():
    cat.setheading(cat.towards(mouse))
    cat.forward(1)
    window.ontimer(follow_runner, 10)
    
def quit():
    window.bye()
    
#calling my functions
window.onkey(Up, "w")
window.onkey(Down, "s")
window.onkey(Left, "a")
window.onkey(Right, "d")
follow_runner()
window.onkey(quit, "space")

window.update()
window.listen()
turtle.done()
